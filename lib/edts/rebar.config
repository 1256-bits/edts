%% -*- mode: erlang; erlang-indent-level: 2; indent-tabs-mode: nil -*-

{lib_dirs, [".."]}.
{deps_dir, [".."]}.
{erl_opts, [debug_info, {parse_transform, lager_transform}]}.
% use specific webmachine commit until the most recent tag supports OTP R16.
{deps,     [ {webmachine, ".*", {git, "git://github.com/basho/webmachine", "43bd3308d351c3bd7949fefb14bb2d87dc039e58"}}
           , {meck,       ".*", {git, "git://github.com/eproxus/meck",      {tag,    "0.7.2"}}}
           , {lager,      ".*", {git, "git://github.com/basho/lager",       {tag,    "1.2.0"}}}
           , {tulib,      ".*", {git, "git://github.com/tjarvstrand/tulib", {branch, "master"}}}
           ]}.

{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [undefined_function_calls]}.
